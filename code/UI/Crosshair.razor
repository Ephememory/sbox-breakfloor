@using Sandbox;
@using Sandbox.UI;
@using Breakfloor;

@namespace Breakfloor.UI
@inherits Panel

@code
{
	Panel ReloadIndicator { get; set; }

	public override void Tick()
	{
		base.Tick();

		if (Game.LocalPawn == null)
			return;

		var ply = (Breakfloor.Player)Game.LocalPawn;

		SetClass("hidden", ply.LifeState != LifeState.Alive);

		var wep = ply.Gun;
		if (!wep.IsValid())
			return;

		if (!Game.LocalClient.GetValue<bool>(BreakfloorGame.BF_AUTO_RELOAD_KEY))
			ReloadIndicator.SetClass("active", (wep.ClipAmmo <= 0) && !wep.IsReloading);
	}
}

<root>
	<reload @ref="ReloadIndicator" id="reload">
		<label>RELOAD</label>
	</reload>


	<style>
		crosshair {
			position: absolute;
			width: 8px;
			height: 8px;
			left: 50%;
			top: 50%;
			margin-top: -4px;
			margin-left: -4px;
			border-width: 1px;
			border-color: white;
			border-radius: 2px;
			backdrop-filter: invert(100%);
			opacity: 1;
			&.hidden

		{
			opacity: 0;
		}

		}

		reload {
			color: rgba(0, 0, 0, 0);
			background-color: rgba(0, 0, 0, 0);
			border-radius: 2px;
			position: absolute;
			width: 64px;
			min-width: 64px;
			height: 22px;
			font-family: Poppins;
			font-weight: bold;
			font-size: 14px;
			left: 200%;
			top: 100%;
			justify-content: center;
			transition: background-color 0.3s ease-in-out;
			transition: color 0.2s ease-in-out;
			&.active

		{
			transition: all 0.4s ease-in-out;
			color: rgb(255, 255, 255);
			text-shadow: 1px 2px black;
			background-color: rgba(218, 60, 21, 0.541);
			backdrop-filter: blur(20px);
		}

		}
	</style>
</root>